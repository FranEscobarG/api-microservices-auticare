{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                    // Carpeta de salida para los archivos .js
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts", "src/express.d.ts"],                       // Archivos a incluir
  "exclude": ["node_modules", "dist"]     
}
